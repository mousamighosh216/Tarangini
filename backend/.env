# -------------------------------
# JWT / Authentication Settings
# -------------------------------
JWT_SECRET_KEY=supersecretkey123      # replace with a strong random string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60       # token expiry in minutes

# -------------------------------
# Database Settings
# -------------------------------
SQLITE_DB_PATH=./tarangini.db        # path to your SQLite database file

# -------------------------------
# Environment / Debug
# -------------------------------
ENV=development                       # or 'production'
DEBUG=True                             # True/False

# -------------------------------
# Optional: Admin user (Phase 1)
# -------------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123               # can be used for creating default admin user

# -------------------------------
# Optional: Third-party API keys
# -------------------------------
EMAIL_API_KEY=your-email-api-key      # for sending emails if implemented
STRIPE_SECRET_KEY=sk_test_XXXX        # if using payments in the future

# -------------------------------
# Feature toggles
# -------------------------------
ENABLE_VOTING=True                     # for Phase 2 (upvote/downvote)
ENABLE_COMMENT_EDIT=True